@model Domain.Models.CampanhaModel

@{
    ViewBag.Title = "Novo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
<link href="~/Content/gallery-lightbox/ekko-lightbox.css" rel="stylesheet" />
}

@section Scripts {
<script src="~/Content/gallery-lightbox/ekko-lightbox.min.js"></script>
<script type="text/javascript">
        $(function () {
            $(document).on('click', 'a[data-toggle="lightbox"]', function (event) {
                event.preventDefault();
                $(this).ekkoLightbox();
            });
        });
</script>
}

<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Campanha <small>Form</small>
        </h1>

        <ol class="breadcrumb">
            <li>
                <i class="fa fa-users"></i> <a href="/Campanhas/Lista/">Campanhas</a>
            </li>

            <li class="active">
                <i class="fa fa-user"></i> Novo
            </li>
        </ol>
    </div>
</div>
<!-- /.row -->
<!-- Start feedback message code -->

@RenderPage("~/Views/Shared/_Messages.cshtml")

<!-- End feedback message code -->

<form action="/Campanhas/Save" method="post" role="form" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    @RenderPage("~/Views/Campanhas/Form.cshtml")

    <div class="row col-md-12">

        <button type="submit" class="btn btn-primary">Salvar</button>

        <button type="reset" class="btn btn-default">Limpar</button>

    </div>

</form>
<!-- /.row -->

