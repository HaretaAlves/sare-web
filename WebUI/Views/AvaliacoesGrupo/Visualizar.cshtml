@model WebUI.ViewModels.AvaliacaoGrupoViewModel

@{
    ViewBag.Title = "Visualizar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {

}

@section Scripts {

}

<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Avaliação <i class="fas fa-angle-right"></i> Visualizar
        </h1>
    </div>
</div>
<!-- /.row -->
<!-- Start feedback message code -->

@RenderPage("~/Views/Shared/_Messages.cshtml")

<!-- End feedback message code -->

<form action="/Alunos/Save" method="post" role="form" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="row align-items-center justify-content-center">

        <div class="col-lg-6 col-md-10">

            @Html.HiddenFor(model => model.ID)

            <div class="row">

                <div class="form-group col-md-12 @if (!ViewData.ModelState.IsValidField("Nome")) { @Html.Raw("has-error") }">
                    <label>Nome</label>
                    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", @readonly = true })
                </div>

            </div>

            <div class="row">

                <div class="form-group col-md-12 @if (!ViewData.ModelState.IsValidField("Nome")) { @Html.Raw("has-error") }">
                    <label>*Escola</label>
                    @Html.TextBoxFor(model => model.Grupo.TurmaFK.EscolaFK.Nome, new { @class = "form-control", @readonly = true })
                </div>

            </div>

            <div class="row">

                <div class="form-group col-md-12 @if (!ViewData.ModelState.IsValidField("Nome")) { @Html.Raw("has-error") }">
                    <label>*Turma</label>
                    @Html.TextBoxFor(model => model.Grupo.TurmaFK.Nome, new { @class = "form-control", @readonly = true })
                </div>

            </div>

        </div>
    </div>

    @RenderPage("~/Views/AvaliacoesGrupo/AvaliacoesAlunoLista.cshtml")

    <div class="row align-items-center justify-content-center">
        <div class="col-lg-6">
            <div class="text-right">
                <button type="submit" class="btn btn-default"><i class="fas fa-check"></i> Voltar</button>
            </div>
        </div>
    </div>

</form>
<!-- /.row -->