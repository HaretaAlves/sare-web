@model WebUI.ViewModels.AvaliacaoGrupoViewModel


<div class="row">
    @if (Model.AvaliacoesAlunos != null)
    {
        <div class="col-lg-12 table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Nome do Aluno</th>
                        <th>Função</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.AvaliacoesAlunos.Count() == 0)
                    {
                        <tr>
                            <td colspan="4"><label>Nenhum registro encontrado</label></td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model.AvaliacoesAlunos)
                        {
                        <tr>
                            <td>@item.AlunoFK.Nome</td>
                            <td>@item.FuncaoNome</td>
                            <td style="text-align: center;">                                
                                <span onclick="#" style="cursor:pointer;">
                                    <i class="item-edit fas fa-eye"></i>
                                </span>
                            </td>
                        </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    }
</div>


