@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="Bruno Paiva - bspaiva@hotmail.com">

    <title>Autenticação - Admin Boana Jeans</title>

    <!-- Bootstrap Core CSS -->
    <link href="/content/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="/content/bootstrap/css/sb-admin.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="/content/bootstrap/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <link href="~/Content/signin.css" rel="stylesheet" />
</head>

<body style="background-image: url('/Content/Images/BG-3.png'); background-repeat: repeat; background-attachment: fixed; background-position: center;">

    <div class="container" style="margin-top:100px;">

        <form method="post" action="/App/Login/" class="form-signin stitched" role="form">
            @Html.AntiForgeryToken()
            <h2 class="form-signin-heading">Autenticação</h2>

            <div class="form-group input-group">
                <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                <input name="login" type="text" class="form-control" value="admin" placeholder="Usuário" required autofocus />
            </div>

            <div class="form-group input-group">
                <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                <input name="senha" type="password" class="form-control" value="123456" placeholder="Senha" required />
            </div>

            <div class="row form-group" style="margin-right:0px;">
                <a href="#" data-toggle="modal" data-target="#remember" class="pull-left" style="margin-left:20px;margin-top:13px; display:none">Esqueci minha senha</a>
                <button class="btn btn-lg btn-primary pull-right" type="submit">Entrar</button>
            </div>

            <!-- Start feedback message code -->

            @RenderPage("~/Views/Shared/_Messages.cshtml")

            <!-- End feedback message code -->

        </form>

        <!-- Modal -->
        <div class="modal fade" id="remember" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form action="/Login/EsqueciSenha/" method="post">
                        @Html.AntiForgeryToken()
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel">Digite seu e-mail para receber a senha</h4>
                        </div>
                        <div class="modal-body">

                            <div class="form-group">

                                <label>E-Mail</label>
                                <input type="email" name="rememberemail" id="rememberemail" required class="form-control" />

                            </div>

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div> <!-- /container -->

    <!-- jQuery -->
    <script src="/content/bootstrap/js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="/content/bootstrap/js/bootstrap.min.js"></script>

</body>
</html>