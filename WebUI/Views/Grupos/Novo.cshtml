@model WebUI.ViewModels.GrupoViewModel


@{
    ViewBag.Title = "Novo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="~/Content/gallery-lightbox/ekko-lightbox.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/Content/gallery-lightbox/ekko-lightbox.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $(document).on('click', 'a[data-toggle="lightbox"]', function (event) {
                event.preventDefault();
                $(this).ekkoLightbox();
            });
        });
    </script>
}

<!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Grupo <i class="fas fa-angle-right"></i> Novo
            </h1>
        </div>
    </div>
<!-- /.row -->
<!-- Start feedback message code -->

@RenderPage("~/Views/Shared/_Messages.cshtml")

<!-- End feedback message code -->

<form action="/Grupos/Save" method="post" role="form" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    @RenderPage("~/Views/Grupos/Form.cshtml")

    <div class="row align-items-center justify-content-center">
        <div class="col-md-6">
            <div class="text-right">
                <button type="reset" class="btn btn-default btn-clear"><i class="fas fa-times"></i> Limpar</button>
                <button type="submit" class="btn btn-default"><i class="fas fa-check"></i> Inserir</button>
            </div>
        </div>
    </div>

</form>
<!-- /.row -->
