@model IEnumerable<Domain.Models.LojaModel>

@{
    ViewBag.Title = "Lista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {

}

@section Scripts {

    <script type="text/javascript">
        $(".confirmDelete").confirm({

            text: "Deseja realmente excluir este item?",
            confirm: function (button) {

                $('#LoadingModal').modal({ backdrop: 'static', keyboard: false });
                //$("#cod").val($(button).attr("item-id"))
                //$("#DeleteForm").submit();

                var data = { cod: $(button).attr("data-id") };
                var action = $(button).attr("data-action");
                //alert(JSON.stringify(data) + "#" + JSON.stringify(action));
                var fsuccess = function (response) {

                    location.reload(true);
                }

                postData(action, data, fsuccess);
            },
            cancel: function (button) {

                //Do nothing
            },
            confirmButton: "Sim",
            cancelButton: "N&#227o"
        });
    </script>

}

<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Lojas <small>Lista</small>
        </h1>

        <ol class="breadcrumb">
            <li class="active">
                <i class="fa fa-users"></i> Lojas
            </li>
        </ol>
    </div>
</div>
<!-- /.row -->
<!-- Start feedback message code -->

@RenderPage("~/Views/Shared/_Messages.cshtml")

<form name="ListaForm" id="ListaForm" action="/Lojas/Lista" method="post" role="form">
    @Html.AntiForgeryToken()
    <div class="row">

        <div class="col-md-6">

            <div class="form-group">
                <label>Nome</label>
                <input type="text" name="nome" class="form-control" />
            </div>

            <div class="form-group pull-right">
                <button type="reset" class="btn btn-default" onclick="document.getElementById('ListaForm').submit()">Buscar</button>
                <button type="reset" class="btn btn-default" onclick="location.href='/Lojas/Novo'">Novo</button>
            </div>

        </div>

        <div class="col-md-6"></div>

    </div>

</form>

<div class="row">
    @if (Model != null)
    {
        <div class="col-md-6 table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th class=""></th>
                        <th class=""></th>
                        <th class="col-md-6">Nome</th>
                        <th class="col-md-6">Cidade</th>
                        <th class="col-md-6">Estado</th>
                        <th class="col-md-6">Telefone</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td colspan="4"><label>Nenhum registro encontrado</label></td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td style="text-align: center;"><i class="glyphicon glyphicon-remove confirmDelete" data-id="@item.ID" data-action="/Lojas/Excluir/" style="cursor:pointer;"></i></td>
                                <td style="text-align: center;"><span onclick="location.href='/Lojas/Alterar/@item.ID'" class="glyphicon glyphicon-pencil" style="cursor:pointer;" /></td>
                                <td>@item.Nome</td>
                                <td>@item.Cidade</td>
                                <td>@item.Estado</td>
                                <td>@item.Telefone</td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    }
</div>
