<form name="ListaForm" id="ListaForm" action="/Alunos/Lista" method="post" role="form" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="row">

        <div class="col-lg-12">
            <div class="csv-import">
                <label>Use o campo abaixo para importar dados de arquivos .csv</label>
                <div class="form-group">
                    <input type="file" class="form-control" name="foto" />
                    <button type="button" onclick="document.forms[0].action='/Alunos/ImportItens';document.forms[0].submit();" class="btn btn-default">Salvar dados</button>
                </div>
            </div>
        </div>

        <div class="col-lg-12">

            <div class="form-group d-flex justify-content-between">
                <div class="text-left">
                    <button type="reset" class="btn btn-default" onclick="location.href='/Alunos/Novo'">
                        <i class="fas fa-plus"></i>
                        <span>Novo Aluno</span>
                    </button>
                </div>
                <div class="text-right">
                    <input type="text" name="nome" class="form-control input-search" />
                    <button type="reset" class="btn btn-default btn-search" onclick="document.getElementById('ListaForm').submit()">
                        <i class="fas fa-search"></i>
                        Buscar
                    </button>
                </div>
            </div>

        </div>

    </div>

</form>

<div class="row">
        @if (Model.Alunos != null)
         {
            <div class="col-lg-12 table-responsive">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Turma</th>
                            <th>Escola</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Alunos.Count() == 0)
                    {
                        <tr>
                            <td colspan="4"><label>Nenhum registro encontrado</label></td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model.Alunos)
                        {
                            <tr>
                                <td>@item.Nome</td>
                                <td></td>
                                <td></td>
                                <td style="text-align: center;">
                                    <i class="item-remove fas fa-trash" data-id="@item.ID" data-action="/Alunos/Excluir/" style="cursor:pointer;"></i>      
                                    <span onclick="location.href='/Alunos/Alterar/@item.ID'" style="cursor:pointer;">
                                        <i class="item-edit fas fa-edit"></i>
                                    </span>
                                </td>
                            </tr>
                        }
                    }

                    </tbody>
                </table>
            </div>
         }
</div>
